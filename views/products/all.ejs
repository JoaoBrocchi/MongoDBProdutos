<%- include('../partials/head'); %>
<h1>Produtos</h1>
<div class="container">
    <div class="products">
        <% products.forEach((product)=>{ %>
            <div class="product">
            
                <h3><%=product.name%></h3>
                <img src="<%=product.image%>" alt="Img">
                <p>R$<%=product.price%></p>
                <p><%=product.description%></p>
                <div class="actions">
                    <a href="/products/getproduct/<%=product._id%>">Detalhes</a>
                </div>
            </div>  
            
        <% }) %>
    </div>
</div>